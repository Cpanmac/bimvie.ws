<project name="BIMviews">
	<tstamp>
		<format property="builddate" pattern="yyyy-MM-dd" />
	</tstamp>

	<property name="majorversion" value="1"/>
	<property name="minorversion" value="3"/>
	<property name="revisionversion" value="5"/>
	<property name="type" value="FINAL"/>
	<property name="revisiondate" value="${builddate}"/>
	<property name="version" value="${majorversion}.${minorversion}.${revisionversion}-${type}-${revisiondate}"/>

	<target name="release">
		<jar destfile="bimviews-${version}.jar">
			<fileset dir="../">
				<exclude name="bin/**"/>
				<exclude name="build/**"/>
				<exclude name=".settings/**"/>
				<exclude name="deploy/**"/>
				<exclude name="src/**"/>
			</fileset>
			<fileset dir="../bin">
			</fileset>
		</jar>
		
		<java jar="antlibs/githubrelease.jar" fork="true">
			<classpath>
				<pathelement location="antlibs/httpclient-4.3.2.jar"/>
				<pathelement location="antlibs/httpcore-4.3.1.jar"/>
				<pathelement location="antlibs/commons-codec-1.6.jar"/>
				<pathelement location="antlibs/commons-logging-1.1.3.jar"/>
				<pathelement location="antlibs/httpmime-4.3.2.jar"/>
				<pathelement location="antlibs/httpclient-cache-4.3.2.jar"/>
				<pathelement location="antlibs/org.eclipse.egit.github.core-2.1.5.jar"/>
			</classpath>
			<arg value="${github_username}">
			</arg>
			<arg value="${github_password}">
			</arg>
			<arg value="opensourceBIM">
			</arg>
			<arg value="bimvie.ws">
			</arg>
			<arg value="${version}">
			</arg>
			<arg value="${version}">
			</arg>
			<arg value="BIMviews Release. Fore more info goto: https://github.com/opensourceBIM/bimvie.ws/wiki/Releases">
			</arg>
			<arg value="true">
			</arg>
			<arg value="true">
			</arg>
			<arg value="bimviews-${version}.jar">
			</arg>
		</java>
	</target>
</project>